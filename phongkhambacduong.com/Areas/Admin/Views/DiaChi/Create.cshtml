@model WCF.BussinessObject.EntityObject.DiaChiObject

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content">
    <div class="box">
        @using (Html.BeginForm("Create", "DiaChi", FormMethod.Post, new { encType = "multipart/form-data" }))
        {
            <div class="box-header">
                @Html.AntiForgeryToken()
                <h4>Thêm mới <b>Địa chỉ</b></h4>
                @Html.ValidationSummary(true)
            </div>

            <div class="box-body">
                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.Adress)
                    </label>
                    @Html.TextBoxFor(d => d.Adress, new { @class = "form-control", placeholder = "Enter ..." })
                    @Html.ValidationMessageFor(d => d.Adress, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.Mobile)
                    </label>
                    @Html.TextBoxFor(d => d.Mobile, new { @class = "form-control", placeholder = "Enter ..." })
                    @Html.ValidationMessageFor(d => d.Mobile, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.Hotline)
                    </label>
                    @Html.TextBoxFor(d => d.Hotline, new { @class = "form-control", placeholder = "Enter ..." })
                    @Html.ValidationMessageFor(d => d.Hotline, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</section>
