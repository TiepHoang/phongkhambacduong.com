@model WCF.BussinessObject.EntityObject.DiaChiObject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="box">
        @using (Html.BeginForm("Edit", "DiaChi", FormMethod.Post, new { encType = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-header">
                <h4>Chỉnh sửa <b>Địa chỉ</b></h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)
            </div>
            <div class="box-body">
                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i>
                        @Html.LabelFor(model => model.Adress)
                    </label>
                    @Html.TextBoxFor(model => model.Adress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label">
                        <i class="fa fa-barcode"></i>
                        @Html.LabelFor(model => model.Mobile)
                    </label>
                    @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label">
                        <i class="fa fa-barcode"></i>
                        @Html.LabelFor(model => model.Hotline)
                    </label>
                    @Html.TextBoxFor(model => model.Hotline, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Hotline, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <input type="submit" value="Save" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</div>