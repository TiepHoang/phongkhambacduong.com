@model WCF.BussinessObject.EntityObject.PhongBanObject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="box">
        @using (Html.BeginForm("Edit", "PhongBan", FormMethod.Post, new { encType = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="box-header">
                <h4>Chỉnh sửa <b>Phòng ban</b></h4>
            </div>
            <div class="box-body">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)
                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i>
                        @Html.LabelFor(model => model.Name)
                    </label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label">
                        <i class="fa fa-barcode"></i>
                        @Html.LabelFor(model => model.MoTa)
                    </label>
                    @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                        <input type="submit" value="Save" class="btn btn-success" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</div>