@model WCF.BussinessObject.EntityObject.SanPhamObject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="box">
        @using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new { encType = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(d => d.ID)
            @Html.HiddenFor(d => d.LinkImage)

            <div class="box-header">
                <h4>Thêm mới <b>Sản phẩm</b></h4>
                @Html.ValidationSummary(true)

            </div>
            <div class="box-body">
                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.Name)
                    </label>
                    @Html.TextBoxFor(d => d.Name, new { @class = "form-control", placeholder = "Enter ..." })
                    @Html.ValidationMessageFor(d => d.Name, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.Rank)
                    </label>
                    @Html.TextBoxFor(d => d.Rank, new { @class = "form-control", placeholder = "Enter ...", type = "number" })
                    @Html.ValidationMessageFor(d => d.Rank, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.GiaTien)
                    </label>
                    @Html.TextBoxFor(d => d.GiaTien, new { @class = "form-control", placeholder = "Enter ...", type = "number" })
                    @Html.ValidationMessageFor(d => d.GiaTien, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.ThongTin)
                    </label>
                    @Html.TextAreaFor(d => d.ThongTin, new { @class = "form-control", placeholder = "Enter ..." })
                    @Html.ValidationMessageFor(d => d.ThongTin, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group container-fluid">
                    <label class="control-label" for="inputWarning">
                        <i class="fa fa-bell-o"></i> @Html.DisplayNameFor(d => d.LinkImage)
                        <img src="@Model.LinkImage" alt="@Model.LinkImage" style="max-height:200px;max-width:80%;" />
                    </label>
                    <input type="file" name="LinkImage" value=" " />
                    @Html.ValidationMessageFor(d => d.LinkImage, "", new { @class = "alert-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</section>